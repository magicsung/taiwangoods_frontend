<div class="content">

  <div id="ad-carousel" class="carousel slide mt-25" data-ride="carousel">
    <ol class="carousel-indicators hidden-xs">
      <li data-target="#ad-carousel" data-slide-to="0" class="active"></li>
      <li data-target="#ad-carousel" data-slide-to="1"></li>
      <li data-target="#ad-carousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
      <div class="item active">
        <a href="#1"><img src="/image/index-banner-1.jpg" alt="" /></a>
      </div>
      <div class="item">
        <a href="#2"><img src="/image/index-banner-2.jpg" alt="" /></a>
      </div>
      <div class="item">
        <a href="#3"><img src="/image/index-banner-3.jpg" alt="" /></a>
      </div>
    </div>
  </div>

  <div id="promo-goods" class="row mt-10 clearfix">
    <div class="main-product-show col-md-9 col-lg-10">
      <div class="row-m7">
        <% for( var i = 0; i < 4; i++ ) { %>
          <div class="square square-large">
            <a href="/pddetail" class="">
              <img src="http://dummyimage.com/218x218/eeeeee/&text=Large_square">
            </a>
            <span class="hover">
              <a href="#">
                <span class="name">Product name Product name</span>
              </a>
            </span>
          </div>

        <% } %>
      </div>
      <div class="row-m7">
        <% for( var i = 0; i < 5; i++ ) { %>
          <div class="square square-middle">
            <a href="#" class="">
              <img src="http://dummyimage.com/159x159/eeeeee/&text=Middle_square">
            </a>
            <span class="hover">
              <a href="#">
                <span class="name">Product name Product name</span>
              </a>
            </span>
          </div>
        <% } %>
      </div>
    </div>
    <div class="main-ad col-md-3 col-lg-2">
      <div class="row-m7 clearfix">
        <a href="#" class="square ad-vertical pull-right text-right hidden-sm hidden-xs">
          <img src="http://dummyimage.com/235x391/eeeeee/&text=AD_banner">
        </a>
      </div>
    </div>
  </div>

  <div class="new-arrive-title under-line mt-45">
    <h4 class="fw-400 color-primary inline">
      新品推薦
    </h4>
  </div>
  <div class="row mt-15 new-arrive">
    <div class="col-md-12">
      <div class="new-arrive-goods">
        <div class="row-m7">
          <% for( var i = 0; i < 12; i++ ) { %>
          <div class="square square-middle">
            <a href="#">
              <img src="http://dummyimage.com/159x159/eeeeee/">
            </a>
            <div class="like-button">
              <a href="#like"></a>
            </div>
            <span class="hover">
              <a href="#">
                <span class="name">Product name Product name</span>
              </a>
            </span>
          </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>
