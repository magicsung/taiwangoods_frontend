<div class="content">

  <div id="ad-carousel" class="carousel slide mt-15" data-ride="carousel">
    <ol class="carousel-indicators hidden-xs">
      <li data-target="#ad-carousel" data-slide-to="0" class="active"></li>
      <li data-target="#ad-carousel" data-slide-to="1"></li>
      <li data-target="#ad-carousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
      <div class="item active">
        <a href="#1"><img src="/image/index-banner-1.jpg" alt="" /></a>
      </div>
      <div class="item">
        <a href="#2"><img src="/image/index-banner-2.jpg" alt="" /></a>
      </div>
      <div class="item">
        <a href="#3"><img src="/image/index-banner-3.jpg" alt="" /></a>
      </div>
